@model Shoes.Models.ShoesViewModel
@{
    ViewBag.Title = "Добавить туфельку";
}

<div class="page-header">
    <h1>Добавить туфельку</h1>
</div>

@using (Html.BeginForm("AddShoes", "Home", FormMethod.Post, new { enctype = "multipart/form-data" })) {
    <div class="row">
        @Html.HiddenFor(x => x.Id)
        @Html.HiddenFor(x => x.ImageUrl)
        @Html.ValidationSummary()
        <div class="col-sm-6">
            <div class="form-group">
                <label for="image">Картинка:</label>
                <input type="file" name="image" id="image" />
            </div>
            <div class="form-group">
                <label for="Name">Название:</label>
                <p>
                    @Html.ValidationMessageFor(x => x.Name)
                </p>
                @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label for="Desc">Описание:</label>
                @Html.TextAreaFor(x => x.Desc, new { @class = "form-control" })
            </div>

            <div class="form-group">
                <label for="Desc">Размер:</label>
                Размер
            </div>

            <div class="form-group">
                <label for="Desc">Материал:</label>
                @Html.DropDownListFor(x => x.Material.Id, Model.MaterialList , new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label for="Desc">Группа:</label>
                @Html.DropDownListFor(x => x.Group.Id, Model.GroupList, new { @class = "form-control" })
            </div>            
            <div class="form-group">
                <label for="PlaceOfBuying">Страна приобретение:</label>
                @Html.DropDownListFor(x => x.PlaceOfBuying.Id, Model.PlaceList, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label for="PlaceOfProduce">Страна создания:</label>
                @Html.DropDownListFor(x => x.PlaceOfProduce.Id, Model.PlaceList, new { @class = "form-control" })
            </div>

            <div class="form-group">
                <label for="DateOfPurchase">Дата приобретение:</label>
                @Html.TextBoxFor(x => x.DateOfPurchase, new { @class = "form-control", type = "date" })
            </div>
            <div class="form-group">
                <label for="DateOfCreating">Дата создания:</label>
                @Html.TextBoxFor(x => x.DateOfCreating, new { @class = "form-control", type = "date" })
            </div>

            <div class="form-group">
                <label for="IsPublic">Виден всем:</label>
                @Html.CheckBoxFor(x => x.IsPublic, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label for="NumberOfDuplication">Количечство дубликатов:</label>
                @Html.TextBoxFor(x => x.NumberOfDuplication, new { @class = "form-control" })
            </div>

            
            

            <div class="form-group">
                <label for="Desc">Примечания:</label>
                @Html.TextAreaFor(x => x.Notation, new { @class = "form-control" })
            </div>

            <input type="submit" value="Создать" class="form-control" />
        </div>
        <img class="col-sm-6" id="preview" src="@Model.ImageUrl" />
    </div>
}
