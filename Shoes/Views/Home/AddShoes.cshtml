@model Dao.Model.Shoes
@{
    ViewBag.Title = "AddImage";
}

<div class="page-header">
    <h1>Добавить туфельку</h1>
</div>

@using (Html.BeginForm("AddShoes", "Home", FormMethod.Post, new { enctype = "multipart/form-data" })) {
    <div class="row">
        @Html.HiddenFor(x => x.Id)

        <div class="col-sm-6">
            <div class="form-group">
                <label for="Name">Название:</label>
                <p>
                    @Html.ValidationMessageFor(x => x.Name)
                </p>
                @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label for="Desc">Описание:</label>
                @Html.TextBoxFor(x => x.Desc, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label for="IsPublic">Виден всем:</label>
                @Html.CheckBoxFor(x => x.IsPublic, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label for="Price">Цена:</label>
                @Html.TextBoxFor(x => x.Price, new { @class = "form-control", type = "number" })
            </div>
            <div class="form-group">
                <label for="DateOfPurchase">Дата приобретение:</label>
                <p>
                    @Html.ValidationMessageFor(x => x.DateOfPurchase)
                </p>
                @Html.TextBoxFor(x => x.DateOfPurchase, new { @class = "form-control", type = "date" })
            </div>
            <div class="form-group">
                <label for="image">Картинка:</label>
                <input type="file" name="image" id="image" />
            </div>
            <input type="submit" value="Создать" class="form-control" />
        </div>

        <img class="col-sm-6" id="preview" src="@Model.ImageUrl" />

    </div>
}
